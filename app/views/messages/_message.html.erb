<!-- Individual messages -->		 	


<script>	
		  
			$('.chips').material_chip();

			// set inital chips data (can be json)
			$('.chips-initial').material_chip({
			  data: [{
				tag: 'Apple',
			  }, {
				tag: 'Microsoft',
			  }, {
				tag: 'Google',
			  }],
			}); 
	</script>

<% if message.payload != "nil" %>
	<% if @temp =  ::Template.all.where(:payload => message.payload).first %>
		<% if !message.content.match(/^template:/) %>
			<span class="timestamp">
					<center>
						<%= message.created_at.to_time.to_s(:short) %>
					</center>
			</span>
			
			<li class="message right appeared">
				<div class="text_wrapper">
					<div class="text">
						<%= @temp.intent %>
					</div>
				</div>
			</li>
		<% end %>
	
		<%= puts @temp.partial %>		
		<span class="timestamp">
			<center><%= message.created_at.to_time.to_s(:short) %></center>
		</span>			 	
		<%= render :partial =>  "bots/" + @temp.partial %>
	<% end %>
	
<% else %>
	<% if message.responder == "user" %> 
		<li class="message right appeared">		
			<div class="text_wrapper">
				<div class="text">
					<%= message.content %>
				</div>
			</div>
			
		</li>
	<% else %>
		<li class="message left appeared">
			<div class="avatar"> <%= image_tag "shree.png" %> </div>
			<div class="text_wrapper">
				<div class="text-header">
					<%= message.content %>
				</div>
				
				<div class="chips chips-initial"></div>
			</div>
		</li>
	<% end %>
<% end %> 




