<% if message.responder == "user" %> 
		<% if message.content == "template:start" %>

			<%= render :partial => 'bots/vedicmaths/initial_message' %>

		<% elsif message.content == "What is Vedic Maths?" %>
			<li class="message right appeared">
		 	<div class="text_wrapper">
		 		<div class="text">
					<%= message.content %> </div>
			</div>
			</li>
		<%= render :partial => 'bots/vedicmaths/what_is' %>

		<% elsif message.content == "Learn Vedic Maths" %>
			<li class="message right appeared">
		 	<div class="text_wrapper">
		 		<div class="text">
					<%= message.content %> </div>
			</div>
			</li>
		<%= render :partial => 'bots/vedicmaths/learn_vm' %>
		<% elsif message.content == "Franchise" %>
			<li class="message right appeared">
		 	<div class="text_wrapper">
		 		<div class="text">
					<%= message.content %> </div>
			</div>
			</li>
		<%= render :partial => 'bots/vedicmaths/franchise' %>
		<% else %>
			<li class="message right appeared">
		 	<div class="text_wrapper">
		 		<div class="text">
				<%= message.content %> </div>
			</div>
			</li>

		<% end %>

<% else %>
		<li class="message left appeared">
  			<div class="avatar"> <%= image_tag "shree.png" %> </div>

		<div class="text_wrapper">
        <div class="text-header">
		<%= message.content %> </div>
		</div>
		</li>

<% end %>
