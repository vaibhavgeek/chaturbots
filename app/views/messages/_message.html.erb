<li class="message right appeared">
		 	<div class="text_wrapper">
		 		<div class="text">
<%= message.content %> </div>
</div>
</li>


<% else %>
<li class="message left appeared">
  <div class="avatar"> <%= image_tag "shree.png" %> </div>

<div class="text_wrapper">
        <div class="text-header">
<%= message.content %> </div>
</div>
</li>

<% end %>
