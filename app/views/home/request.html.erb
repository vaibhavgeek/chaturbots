
<div class="particles-container no-spacing">
<div id="particles-js""></div>
</div>



<div class="panel login-parent">
<div class="request-main-form">

    <div id="error_explanation" class="white red darken-4 damp-color center" >
</div>

<% if flash[:notice] %>
    <div id="notice" class="white yellow darken-4 damp-color center" >
    <p class="lead"> <%= flash[:notice] %> </p>
    </div>

<% end %>
<div class="container">
    <div class="row">
        <div class="col m10 offset-m1 s12">

            <h4 class="center-align">Request Automation</h4>
            <div class="row">
<%= form_tag(home_send_email_path , :method=>'post' , :id => "check_validation", :multipart => true) do %>
                    <div class="row">
                        <div class="input-field col m6 s12">
                            <input name="f_name" id="first_name" type="text" class="validate">
                            <label for="first_name">First Name</label>
                        </div>
                        <div class="input-field col m6 s12">
                            <input name="l_name" id="last_name" type="text" class="validate">
                            <label for="last_name">Last Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col m6 s12">
                            <input name="mail" id="email" type="email" class="validate" required>
                            <label for="email">Email</label>
                        </div>
                        <div class="input-field col m6 s12">
                            <input name="company" id="company" type="text" class="validate">
                            <label for="company">Company</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                          <textarea id="message" name="message" class="materialize-textarea"></textarea>
                          <label for="message">Message</label>
                        </div>
                    </div>
                   <!--  <div class="row">
                        <div class="input-field col s12">
                          <label for="budget">Budget</label>
                          <br/>
                        </div>
                        <div class="input-field col s12">
                            <select class="newsel" name="budget" id="budget">
                              <option value="" selected disabled>Choose your option</option>
                              <option value="1000">&lt; $1000</option>
                              <option value="5000">$1000 - $5000</option>
                              <option value="5001">&gt; $5000</option>
                            </select>
                        </div>
                    </div>
                    -->
                    

                    <div class="divider"></div>
                    <br/>
                    <div class="row">
                        <div class="col m12">
                         <p class="right-align">
                         <%= button_to "Place Request" , home_send_email_path , :method => "post" , :class => "btn btn-primary btn-large" ,  :remote => true , :style => "width:100%" %>


                         </p>
                        </div>
                    </div>
               				<% end %>

            </div>
        </div>
    </div>
</div>
</div>

  


<script type="text/javascript">
  particlesJS.load('particles-js', '<%= asset_path("particle.json") %>', function() {
  console.log('callback - particles.js config loaded');
});

</script>

				

<script type="text/javascript">


$(document).ready(function(){
   
    function isEmpty(name){
        console.log(name.trim())
      if(name.trim() == ""){
        return true;
      }
      else {
        return false;
      }
    }; 

    $( "#check_validation" ).submit(function( event ) {
        fname = $("#first_name").val();
        lname = $("#last_name").val();
        company = $("#company").val();
        message = $("#message").val();
        budget = $("#budget option:selected").val();
        console.log(isEmpty(fname));
        console.log(lname);
        console.log(company);
        console.log(message);
        console.log(budget);

        if(isEmpty(fname)||isEmpty(lname)||isEmpty(company)||isEmpty(message)||isEmpty(budget))
        {

            $("#error_explanation").html("<p class='lead'> Please fill the complete form.</p>");
            event.preventDefault();

        }
        /*else
        {
            alert("else");
        }*/
    });

    

});
</script>