



<ul class="messages">
	<% if @messages.first != nil %>
		<span class="timestamp">
		 	<center><%= @messages.first.created_at.to_time.to_s(:short) %> </center>
		 </span>		 
	<% else %>
		<span class="timestamp"> 
			<center> <%= Time.now.utc.to_time.to_s(:short) %> </center>
		</span>
	<% end %>	
	<%= render :partial =>  "bots/" + Template.where(:user_id => current_user.id , :payload => "initial_message").first.partial  %>
	<%= render :partial => 'messages/message' , collection: @messages %>
</ul>

<div class="input_message">
	<input type="text" id="event" data-auth="admin" name="chat_box" data-behavior="chatbot_call" placeholder="Type your message here">
</div>