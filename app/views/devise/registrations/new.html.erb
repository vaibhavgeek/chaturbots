<div class="row no-spacing">

<div class="particles-container no-spacing">
<div id="particles-js" style="height: 700px;"></div>
</div>


<div class="login-form">


<h5 class="center no-spacing">Sign up</h5> 

<h3 class="center no-spacing">
<i class="material-icons medium">looks_one</i>
<i class="material-icons medium prime-color">looks_two</i>
<i class="material-icons medium">looks_3</i>

</h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <% if resource.errors.any? %>
    <div id="error_explanation" class="white red darken-4 damp-color center" >
      
       <%=  pluralize(resource.errors.count, "error")  %> has been incurred
        
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :designation %> <br/> 
    <%= f.text_field :organisation_admin %> 
  </div>
  <div class="field hidden">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true , :value => @email_id %>
  </div>
  <div class="field hidden">
    <%= f.label :organisation_id %><br />
    <%= f.text_field :organisation_id, autofocus: true , :value => @main_id %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions top-margin-10 center">
    <%= f.submit "proceed to step 3" , :class => "btn btn-primary " %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
<script type="text/javascript">
  particlesJS.load('particles-js', '<%= asset_path("particle.json") %>', function() {
  console.log('callback - particles.js config loaded');
});

</script>