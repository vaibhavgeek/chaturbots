

<div class="row container top-margin-20">
		<div class="col s2 white no-padding">
				<%= render 'sidebar' %>
		</div>
		<div class="col s10 white">
	<h4> Payment Settings</h4>
	<hr/> <br/>
<div style="text-align: center;">	

	<span style="font-size:2em;">Card Authenticated </span>

</div>
	<% if current_user.status == "created" %>
	<center><i class="large material-icons red-text">close </i>
<br/>
			<button id="rzp-button1" class="btn btn-large btn-primary">Pay</button> 
</center>
	<% else %>
	<center>
	<i class="large material-icons green-text">check_circle</i>
	<br/>
	<%= link_to "Manage Cards" , "https://razorpay.com/flashcheckout/manage/" , :class => "btn btn-large btn-primary" , :target => "_blank"%>

</center>
	<% end %>


<div class="grey lighten-2 black-text padding-1"> 
  ChaturBots AI Private Limited, does not store any card information. We use RazorPay as our vendor, that is RBI guidelines complaint. The charges would start incurring when the 15 day trial is over. You can cancel anytime you want or add your card details later on. 
    </div>
		



<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
var options = {
    "key": "rzp_test_3fUWG9VF6LL7hP",
    "subscription_id": "<%= current_user.subscription_id %>",
    "name": "ChaturBots AI Private Limited",
    "description": "Embed Automated Live Chat for your website!",
    "image": "<%= asset_path('cb_white_blue.png') %>",
    "handler": function (response){
        window.location.replace("<%= root_url %>");
    },
    "prefill": {
        "name": "<%= current_user.name %>",
        "email": "<%= current_user.email %>"
    }, 
    "notes": {
        "website": "Website Name"
    },
    "theme": {
        "color": "#00356B"
    }
};
var rzp1 = new Razorpay(options);

document.getElementById('rzp-button1').onclick = function(e){
    rzp1.open();
    e.preventDefault();
}
</script>

	</div>
</div>
